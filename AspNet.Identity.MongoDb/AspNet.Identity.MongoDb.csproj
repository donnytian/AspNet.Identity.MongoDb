<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>DonnyTian</Authors>
    <Company />
    <Description>A MongoDb provider for ASP.NET Identity built on .Net Standard</Description>
    <PackageProjectUrl>https://github.com/donnytian/AspNet.Identity.MongoDb</PackageProjectUrl>
    <PackageTags>aspnet,aspnetcore,identity,aspnetidentity,mongodb,netstandard</PackageTags>
    <Version>1.0.0-beta1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Product />
    <PackageId>NETStandard.AspNet.Identity.MongoDb</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Identity.Core" Version="2.0.0" />
    <PackageReference Include="MongoDB.Driver" Version="2.4.4" />
  </ItemGroup>

</Project>
